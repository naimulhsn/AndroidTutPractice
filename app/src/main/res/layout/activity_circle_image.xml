<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CircleImage">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idCirclurImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_sportsfestlogo1_svg"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/colorBlack"
        app:civ_border_overlay="true"
        app:civ_fill_color="@color/colorBlack"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idCirclurImage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_avater1" />


</RelativeLayout>